<div><h2 id="intro">From the collection</h2></div>

<div class="content" id="shop">
    {{# each products }}
        <div class="row">
            {{# each this }}
                <div class="col-sm-6 col-md-4" style="height:360px;">
                    <div class="thumbnail" style="height:336px;">
                        <img src="{{ this.imagePath }}" alt="..." class="img-responsive">
                        <div class="caption">
                            <h3>{{ this.title }}</h3>
                            <p class="description">{{ this.description }}</p>
                            <div class="clearfix">
                                <div class="price pull-left">${{ this.price }}</div>
                                <a href="/add-to-cart/{{this._id}}" class="btn btn-success pull-right" role="button">Add to Shopping Cart</a>
                            </div>
                        </div>
                    </div>
                </div>
            {{/each}}
        </div>
    {{/each}}
</div>

<script type="text/javascript" src="javascripts/slideshow.js"></script>